<?xml version="1.0" encoding="utf-8"?>
<!--This is the background for our custom floating action button (FAB)!-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Make the background shadow for the shape -->
    <item android:top="8px">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#06000000" />
                    <padding
                        android:bottom="3px"
                        android:left="3px"
                        android:right="3px"
                        android:top="3px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#07000000" />
                    <padding
                        android:bottom="2px"
                        android:left="2px"
                        android:right="2px"
                        android:top="2px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />

                    <solid android:color="#08000000" />
                    <padding
                        android:bottom="2px"
                        android:left="2px"
                        android:right="2px"
                        android:top="2px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />

                    <solid android:color="#09000000" />
                    <padding
                        android:bottom="1px"
                        android:left="1px"
                        android:right="1px"
                        android:top="1px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />

                    <solid android:color="#10000000" />
                    <padding
                        android:bottom="1px"
                        android:left="1px"
                        android:right="1px"
                        android:top="1px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />

                    <solid android:color="#11000000" />
                    <padding
                        android:bottom="1px"
                        android:left="1px"
                        android:right="1px"
                        android:top="1px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />

                    <solid android:color="#12000000" />
                    <padding
                        android:bottom="1px"
                        android:left="1px"
                        android:right="1px"
                        android:top="1px" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />

                    <solid android:color="#13000000" />
                    <padding
                        android:bottom="1px"
                        android:left="1px"
                        android:right="1px"
                        android:top="1px" />
                </shape>
            </item>

        </layer-list>
    </item>

    <item>
        <!--Make the ripple effect when button clicked and the actual shape -->
        <ripple xmlns:android="http://schemas.android.com/apk/res/android"
            android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#FFBB00" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp" />
                    <solid android:color="#000000" />
                </shape>
            </item>
        </ripple>

    </item>
</layer-list>